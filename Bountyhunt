--================ HIDE UI =================
local HideBtn = Instance.new("TextButton", Main)
HideBtn.Size = UDim2.new(0,30,0,30)
HideBtn.Position = UDim2.new(1,-35,0,10)
HideBtn.Text = "â€“"
HideBtn.Font = Enum.Font.GothamBold
